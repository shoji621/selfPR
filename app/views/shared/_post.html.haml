.content
  .content__upper
    .content__upper-icon
      = icon('fas', 'user-alt', class: 'icon')
    .content__upper__right
      .content__upper__right-name
        = link_to post.user.name, user_path(post.user), class: "content__upper__right-name"
      .content__upper__right__element
        .content__upper__right__element-industry
          - if post.industry_id?
            志望業界:
            = post.industry.name
        .content__upper__right__element-hopejob
          - if post.hopejob_id?
            志望職種:
            = post.hopejob.name
        .content__upper__right__element-nowjob
          - if post.nowjob_id?
            現職:
            = post.nowjob.name
      .content__upper__right__status
        - if post.solved?
          .content__upper__right__status-solved
            解決済
        - else
          .content__upper__right__status-unsolved
            受付中
        .content__upper__right__status-date
          = post.created_at.strftime("%Y/%m/%d(%a) %H:%M")
  .content__lower
    %p.content__lower__text
      = link_to post.text.truncate(200), post_path(post.id), class: "content__lower__text"

    %p.content__lower__favorite{id: "favorite-#{post.id}"}
      = render partial: "shared/favorite", locals: { post: post }