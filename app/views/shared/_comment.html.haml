.content{id: "comment-#{comment.id}"}
  .content__upper
    .content__upper-icon
      = icon('fas', 'user-alt', class: 'icon')
    .content__upper__right
      .content__upper__right-name
        = link_to comment.user.name, user_path(@post.user), class: "content__upper__right-name"
      .content__upper__right__status
        .content__upper__right__status-solved
        .content__upper__right__status-date
          = comment.created_at.strftime("%Y/%m/%d(%a) %H:%M")
          - if current_user.id == comment.user_id && !@post.solved?
            = link_to "削除", post_comment_path(@post.id, comment.id),method: :delete, remote: true, data: { confirm: '削除してよろしいですか？' }, class: "postManage__delete postManage__delete__comment"
  .content__lower
    %p.content__lower__text
      = comment.text
